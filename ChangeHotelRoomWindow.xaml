<Window x:Class="BD_LAB2_PERSONAL.ChangeHotelRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD_LAB2_PERSONAL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ChangeHotelRoomWindow" Height="550" Width="520">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Margin="5"
            materialDesign:HintAssist.Hint="ID номера"
            FontSize="25"
            Name="TextBoxNumberId"
            Text="{Binding Path= NumberId}"/>

        <TextBox
            Grid.Row="1"
            Margin="5"
            materialDesign:HintAssist.Hint="Имя номера"
            FontSize="25"
            Name="TextBoxNumberName"
            Text="{Binding Path= NumberName}"/>

        <TextBox
            Grid.Row="2"
            Margin="5"
            materialDesign:HintAssist.Hint="Емкость"
            FontSize="25"
            Name="TextBoxCapacity"
            Text="{Binding Path= Capacity}"/>

        <TextBox
            Grid.Row="3"
            Margin="5"
            materialDesign:HintAssist.Hint="Описание"
            FontSize="25"
            Name="TextBoxDescription"
            Text="{Binding Path= Description}"/>

        <TextBox
            Grid.Row="4"
            Margin="5"
            materialDesign:HintAssist.Hint="Цена"
            FontSize="25"
            Name="TextBoxPrice"
            Text="{Binding Path= Price}"/>

        <TextBox
            Grid.Row="5"
            Margin="5"
            materialDesign:HintAssist.Hint="ID сотрудника"
            FontSize="25"
            Name="TextBoxEmplId"
            Text="{Binding Path= EmplsId}"/>

        <DockPanel Grid.Row="6">
            <Button
                Content="Изменить"
                Margin="5"
                HorizontalAlignment="Left"
                MinHeight="50"
                MinWidth="410"
                Name="ButtonChange" Click="ButtonChange_Click" />
            <Button
                MinHeight="50"
                MinWidth="50"
                Background="Red"
                HorizontalAlignment="Left"
                Margin="5"
                Name="ButtonClose" Click="ButtonClose_Click">
                <materialDesign:PackIcon Kind="Close" />
            </Button>
        </DockPanel>
    </Grid>
</Window>
